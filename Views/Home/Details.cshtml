@model HomeDetailsViewModel

@{
    ViewBag.Title = "Cloth Details";
}

<div class="card-deck">
    <div class="card mt-2">
        <div class="card-header alert alert-primary text-center">
            <h1>@Model.Cloth.Title</h1>
        </div>
        <div class="card-body">
            @foreach (ClothImages image in Model.Cloth.Images)  
            {
                var photoPath = "~/images/" + (image.Image.PhotoPath ?? "original_images/noimage.png");
                <img class="card-img-top m-1" src="@photoPath" asp-append-version="true" style="width:auto;" />
            }
        <h1>@Model.Cloth.Images.First().Image.ImageId.ToString()</h1>
        </div>
    </div>
    <div class="col-md-4">
        <div class="alert alert-info m-3">
            <h1>Price: @Model.Cloth.Price грн.</h1>
        </div>
        <div class="alert alert-secondary m-3">
            <h1>Description: @Model.Cloth.Description</h1>
        </div>
    </div>
</div>