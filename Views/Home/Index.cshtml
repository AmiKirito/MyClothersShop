@model Cloth[]

@{
    ViewBag.Title = "Clothers List";
    
}
<div class="card-deck">
    @foreach (Cloth cloth in Model)
    {
        var photoPath = "~/images/" + (cloth.Images.First().PhotoPath ?? "original_images/noimage.png");

        <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
            <div class="card-header text-center">
                <h2 class="alert alert-primary m-0">@cloth.Title</h2>
            </div>  
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true"/>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@cloth.ClothId" class="btn btn-primary m-1">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@cloth.ClothId" class="btn btn-primary m-1">Edit</a>
                <a asp-action="delete" asp-controller="home" asp-route-id="@cloth.ClothId" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>

    }
</div>